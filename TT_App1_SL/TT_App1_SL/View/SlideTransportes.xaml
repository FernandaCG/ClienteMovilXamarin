<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TT_App1_SL.SlideTransportes">
    <ContentView.Content>
        <StackLayout HeightRequest="600"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="End"
                     BackgroundColor="Azure">
            <Button
                    HorizontalOptions="CenterAndExpand"
                    Text="Metro">
            </Button>
            <Button
                    HorizontalOptions="CenterAndExpand"
                    Text="Metrobus">
            </Button>
            <Button
                    HorizontalOptions="CenterAndExpand"
                    Text="Microbus">
            </Button>
            <Button
                    HorizontalOptions="CenterAndExpand"
                    Text="Sitios de Taxis">
            </Button>
            <Button
                    HorizontalOptions="CenterAndExpand"
                    Text="Tren Suburbano">
            </Button>
        </StackLayout>
    </ContentView.Content>
</ContentView>